<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TreasurySolutions" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_green</item>
        <item name="colorPrimaryVariant">@color/creamy</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LeftTabButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSizeTopLeft">@dimen/btn_round</item>
        <item name="cornerSizeBottomLeft">@dimen/btn_round</item>
    </style>

    <style name="RightTabButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/btn_round</item>
        <item name="cornerSizeBottomRight">@dimen/btn_round</item>
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerFamilyBottomLeft">cut</item>
    </style>

    <style name="CustomChipItem" parent="Widget.MaterialComponents.Chip.Choice">
    <item name="chipCornerRadius">30dp</item>
    <item name="android:layout_marginEnd">10dp</item>
    </style>

</resources>